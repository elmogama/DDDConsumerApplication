@using ConsumerApplication.Models
<div class="card">
    <img src="@product.ImageLink" style="width:100%; max-height: 100px">
    <a href="/employee/product/@product.ProductId"><h1>@product.ProductName</h1></a>
    <p class="price">@product.Price</p>
    <p>@product.Description</p>
    
</div>

@code {
    [Parameter]
    public Product product { get; set; }
}